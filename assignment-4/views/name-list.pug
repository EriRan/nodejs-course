doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Name list
  body 
    if names.length > 0
      ul
      each name in names 
        li #{name}
    else
      h1 No names!